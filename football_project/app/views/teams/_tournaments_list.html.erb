<div id = "tournaments-list" class = "modal fade" role = "dialog">
  <div class = "modal-dialog modal-xs">
    <div id="tour_list" class = "modal-content" style="width: 70%;">
      <button name="button" type="submit" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div>
</div>
<script type="text/javascript">
	$('#tournaments-list').on('show.bs.modal', function getvalue (event) {
    var button = $(event.relatedTarget); 
    var recipient = button.data('whatever');
    var $div = $("#tour_list");
    if ( recipient === ""){
      var str = '<p class="form-control"> Đội bóng chưa có giải đấu vui lòng thêm ' +
      '<a href="/tournaments" title="/home">tại đây</a>' +
      '</p>';
      console.log(str);
      $div.prepend(str)
    }else{
      recipient.forEach(function(i){
        var str = '<p class="form-control">' +
        '<a href="/tournaments/' + i.id + '" title="' + i.name + '">' + i.name +'</a>' +
        '</p>';
        $div.prepend(str)
      });
    }
  });
</script>