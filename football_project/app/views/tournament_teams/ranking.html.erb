<h1 style="text-align: center;">
      <%= link_to @tournament.name, @tournament  %>
</h1>
<% if flash.blank? %>
  <%= render partial: 'shared/show_messages', locals: {flash: flash} %>
<%= form_tag set_rank_tournament_team_path(@tournament.id), method: :put do %>
    <table class="table table-bordered">
      <%= submit_tag 'Submit', class: "btn btn-info" %>
      <thead>
        <th></th>
        <th>Fisrt team</th>
        <th>Second team</th>
      </thead>
      <tbody>
        <%= render partial: 'group', collection: @tournament.groups %>
      </tbody>
    </table>
  <% end %>
<% end %>
<table class="table table-bordered">
   <caption style="text-align: center;">
    
  </caption>
   <thead>
    <tr>
      <th style="width: 7%;">#</th>
      <th>Name</th>
      <th style="width: 20%;">Group</th>
      <th style="width: 7%;">W</th>
      <th style="width: 7%;">D</th>
      <th style="width: 7%;">L</th>
      <th style="width: 7%;">GF</th>
      <th style="width: 7%;">GA</th>
      <th style="width: 7%;">GD</th>
      <th style="width: 7%;">Pts</th>
    </tr>
  </thead>
  <tbody>
   <%
    unless @tournament.tournament_teams.blank?
     @tournament.tournament_teams.order(group_id: :asc, pts: :desc, gd: :desc).each_with_index do |team, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= team.team_name %></td>
          <td><%= team.group_name %></td>
          <td><%= team.w %></td>
          <td><%= team.d %></td>
          <td><%= team.l %></td>
          <td><%= team.gf %></td>
          <td><%= team.ga %></td>
          <td><%= team.gd %></td>
          <td><%= team.pts %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>