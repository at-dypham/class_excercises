  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <div class="container">
    <nav>
      <%= link_to "Trang Chủ", href: "/tournaments", class: "btn btn-info" do %>
        <i class="fa fa-times">Trang chủ</i>
      <% end %>
      <%= link_to "Đội bóng", href: "/teams", class: "btn btn-info" do %>
        <i class="fa fa-times">Đội bóng</i>
    <% end %>
    </nav>
    <%= yield %>
  </div>
</body>
</html>
